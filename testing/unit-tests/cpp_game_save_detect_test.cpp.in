#include "pkmn_boost_unit_test.hpp"

#include <pkmn/game_save.hpp>

#include <string>

// TODO: Blue save
BOOST_AUTO_TEST_CASE(red_blue_yellow_test)
{
    std::string pokemon_red = "@POKEMON_RED_SAV@";
    std::string pokemon_yellow = "@POKEMON_YELLOW_SAV@";
    std::string expected_result = "Red/Blue/Yellow";

    BOOST_CHECK_EQUAL(
        pkmn::game_save::detect_type(pokemon_red),
        expected_result
    );
    BOOST_CHECK_EQUAL(
        pkmn::game_save::detect_type(pokemon_yellow),
        expected_result
    );
}

